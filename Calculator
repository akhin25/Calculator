#!/usr/bin/env python3
from tkinter import *
import tkinter.font as font
mwin=Tk()
#mwin.geometry('300x300')
mwin.title("Calculator")
#frame=Frame(master=mwin,bg="skyblue",padx=10)
#frame.pack()
con1=StringVar()
con2=StringVar()
def bh(p):
 if p=='=':
  con1.set(eval(con1.get()))
 elif p=='Ac':
  con1.set("")
 #elif p=='sqrt':
  #con2.set(con1.get(eval('*1/100*')))
 elif p=='/0':
  con1.set("Invalid")
 else: 
  con1.set(con1.get()+p)
myfont=font.Font(size=20)
b1=Button(mwin,text="1",command=lambda : bh('1'))
b2=Button(mwin,text="2",command=lambda : bh('2'))
b3=Button(mwin,text="3",command=lambda : bh('3'))
b4=Button(mwin,text="4",command=lambda : bh('4'))
b5=Button(mwin,text="5",command=lambda : bh('5'))
b6=Button(mwin,text="6",command=lambda : bh('6'))
b7=Button(mwin,text="7",command=lambda : bh('7'))
b8=Button(mwin,text="8",command=lambda : bh('8'))
b9=Button(mwin,text="9",command=lambda : bh('9'))
bac=Button(mwin,text="clear",width=0,height=0,command=lambda : bh('Ac'),bg='cyan')
br1=Button(mwin,text="(",command=lambda : bh('('))
br2=Button(mwin,text=")",command=lambda : bh(')'))
bdot=Button(mwin,text=".",width=1,height=1,command=lambda : bh('.'))
bdot["font"]=myfont
bp=Button(mwin,text="+",command=lambda : bh('+'))
bmi=Button(mwin,text="-",command=lambda : bh('-'))
beq=Button(mwin,text="=",width=4,height=2,command=lambda : bh('='),bg='red')
bz=Button(mwin,text="0",command=lambda : bh('0'))
bper=Button(mwin,text="%",command=lambda : bh('%'))
bmul=Button(mwin,text="*",command=lambda : bh('*'))
bdiv=Button(mwin,text="/",command=lambda : bh('/'))
bsq=Button(mwin,text="sqrt",command=lambda: bh('**(0.5)'))

e1=Entry(mwin,textvariable=con1)
con1.set("")
e1.grid(row=0,columnspan=4)
bac.grid(row=1,column=0)
bdot.grid(row=1,column=1)
bper.grid(row=1,column=2)
bmul.grid(row=2,column=3)
b7.grid(row=2,column=0)
b8.grid(row=2,column=1)
b9.grid(row=2,column=2)
b4.grid(row=3,column=0)
b5.grid(row=3,column=1)
b6.grid(row=3,column=2)
bmi.grid(row=3,column=3)
b1.grid(row=4,column=0)
b2.grid(row=4,column=1)
b3.grid(row=4,column=2)
bp.grid(row=4,column=3)
bz.grid(row=5,column=0)
br1.grid(row=5,column=1)
br2.grid(row=5,column=2)
beq.grid(row=5,column=3)
bdiv.grid(row=1,column=3)
bsq.grid(row=5,column=4)

#be.grid(row=2,column=3)
#be.grid(row=2,column=2,columnspan=2,sticky='EW')
mwin.mainloop()
